{
  "name": "@serverless-cd/zx",
  "version": "0.0.3",
  "description": "A tool for writing better scripts.",
  "main": "./dist/index.js",
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "build": "tsc --project tsconfig.prod.json && npm run esbuild",
    "build:check": "tsc",
    "test": "npm run build && PATH=$(env -i bash -c 'echo $PATH') node_modules/.bin/uvu test -i fixtures",
    "test:types": "tsd",
    "coverage": "c8 --check-coverage npm test -- -i package",
    "mutation": "stryker run",
    "circular": "madge --circular src/*",
    "esbuild": "esbuild lib/core.js --bundle --log-level=error --minify --platform=node --format=cjs --target=node10.4 --outfile=dist/index.js",
    "prepub": "npm run build",
    "pub": "npm publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.6.3",
    "@types/ps-tree": "^1.1.2",
    "@types/which": "^2.0.1",
    "chalk": "^5.0.1",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "minimist": "^1.2.6",
    "node-fetch": "3.2.8",
    "ps-tree": "^1.2.0",
    "which": "^2.0.2",
    "yaml": "^2.1.1",
    "@stryker-mutator/core": "^6.1.2",
    "c8": "^7.12.0",
    "esbuild": "^0.15.8",
    "madge": "^5.0.1",
    "prettier": "^2.7.1",
    "tsd": "^0.22.0",
    "typescript": "^4.8.0-dev.20220729",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "repository": "google/zx",
  "author": "Anton Medvedev <anton@medv.io>",
  "license": "Apache-2.0"
}
